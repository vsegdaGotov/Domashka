using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Освоение_циклов
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string manifest;
            int repetitions;
            Console.Write("Напишите ваше сообщение:");
            manifest = Console.ReadLine();
            Console.WriteLine("Количество повторов:");
            repetitions = Convert.ToInt32(Console.ReadLine());

            for(int i = 0; i < repetitions; i++)
            {
                Console.WriteLine(manifest);
            }
                     
            Console.ReadKey();
        }
    }
}
