using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Степень_двойки
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Random random = new Random();
            int limitMin = -999999999;
            int limitMax = 999999999;
            int number = random.Next(limitMin, limitMax);
            int countStart = 2;
            int answer = 1;
            int multiplier = 2;
            Console.WriteLine(number);

            if (number < answer)
            {
                Console.WriteLine($"Ответ: {multiplier} в степени 0");
            }
            else
            {
                while (countStart <= number)
                {
                    answer++;
                    countStart *= multiplier;
                }

                Console.WriteLine($"Ответ: {multiplier} в степени {answer}");
            }
            Console.ReadKey();
        }
    }
}
