using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Перестановка_местами_значений
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Hello, World!!!");
            string name = "Петров";
            string surname = "Егор";
            Console.WriteLine($"Ваше имя {name}, а фамилия {surname}");
            string temporaryStorage;
            temporaryStorage = name;
            //Console.WriteLine(temporaryStorage);
            name = surname;
            //Console.WriteLine(name);
            surname = temporaryStorage;
            Console.WriteLine($"Ваше имя {name}, а фамилия {surname}");
            Console.ReadKey();
        }
    }
}
